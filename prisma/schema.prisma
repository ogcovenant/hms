generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  userCategory String
  doctors      Doctor[]
}

model Doctor {
  id          String @id @default(uuid())
  email       String @unique
  firstName   String
  lastName    String
  phoneNumber String
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}